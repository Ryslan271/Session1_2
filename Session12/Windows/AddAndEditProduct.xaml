<Window x:Class="Session12.Windows.AddAndEditProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session12.Pages"
      mc:Ignorable="d" 
      Height="550" Width="900"
      Title="AddAndEditProductPage"
      Name="Root"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Closing="Root_Closing">

    <Border BorderBrush="Black"
            BorderThickness="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="314*"/>
                <RowDefinition Height="175*"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Black"
                BorderThickness=" 0 0 2 2 " Grid.ColumnSpan="2" Margin="0,0,593,0">
                <StackPanel VerticalAlignment="Center">
                    <Border BorderBrush="Black"
                        BorderThickness="1"
                        Width="200"
                        Height="200"
                        Margin="0 0 0 10">

                        <Image 
                        VerticalAlignment="Top"
                        Margin="10"
                        Width="200"
                        Height="200">
                            <Image.Source>
                                <Binding Path="ProductEditing.Photo">
                                    <Binding.TargetNullValue>
                                        <BitmapImage
                                        UriSource="/Recourse/NetPhotoProduct.jpg"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                    </Border>

                    <Button Padding="0 5"
                        Content="Изменить картинку"
                        Width="200" Click="EditImageProduct"/>
                </StackPanel>
            </Border>

            <StackPanel Style="{StaticResource ResourceKey=StyleStackPanel}"
                    Grid.Column="1" Height="248" Width="110">

                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20"
                            x:Name="IDStackPanel">
                    <TextBlock Text="Номер"
                               Margin="0 0 10 0"/>
                    <TextBox Text="{Binding ProductEditing.ID}"
                             IsReadOnly="True"
                             Style="{StaticResource ResourceKey=StyleTextBox}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20">
                    <TextBlock Text="Дата"
                               Margin="0 0 10 0"/>
                    <TextBox Text="{Binding ProductEditing.AdditionDateTime}"
                             Style="{StaticResource ResourceKey=StyleTextBox}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20">
                    <TextBlock Text="Название"
                               Margin="0 0 10 0"/>
                    <TextBox Text="{Binding ProductEditing.Title}"
                             Style="{StaticResource ResourceKey=StyleTextBox}"
                             TextWrapping="Wrap"
                             PreviewTextInput="TextBox_PreviewTextInput"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20">
                    <TextBlock Text="Описание"
                               Margin="0 0 10 0"/>
                    <TextBox Text="{Binding ProductEditing.Description}"
                             Style="{StaticResource ResourceKey=StyleTextBox}"
                             TextWrapping="Wrap"
                             PreviewTextInput="TextBox_PreviewTextInput"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20">
                    <TextBlock Text="Стоимость"
                               Margin="0 0 10 0"/>
                    <TextBox Text="{Binding ProductEditing.Cost}"
                             Style="{StaticResource ResourceKey=StyleTextBox}"
                             TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
                        Grid.Column="0" Grid.ColumnSpan="2" Margin="0,314,593,0" Grid.RowSpan="3">

                <TextBlock Text="Единицы измерения"
                       Margin="10 5 0 5"/>

                <ListBox ItemsSource="{Binding MeasureUnits}"
                     x:Name="ListBoxRadioBattonMeasureUnits"
                     Margin="10 5 10 5"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <RadioButton x:Name="RadioButtonUnit"
                                         GroupName="Name"
                                         Content="{Binding Title}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,314,0,0" Grid.RowSpan="3" Width="428">

                <StackPanel>
                    <TextBlock Text="Выбранные страны поставщиков"/>

                    <Border BorderBrush="Black"
                        BorderThickness="1.5"
                        Margin="5 10">
                        <ListBox ItemsSource="{Binding ProductEditing.SupplierCountry}"
                             Padding="5 10"
                             x:Name="LeftListBoxCountry">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{Binding Brush}"
                                        BorderThickness="2"
                                        Padding="3">
                                        <TextBlock Text="{Binding Title}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </StackPanel>

                <StackPanel Margin="20 0 20 0"
                            VerticalAlignment="Center">
                    <Button Content="&lt;"
                            Margin="0 0 0 10"
                            Padding="3 5 3 9"
                            FontSize="25"
                            FontWeight="Black" Click="ButtonDragLeft"/>
                    <Button Content="&gt;"
                            Padding="3 5 3 9"
                            FontSize="25"
                            FontWeight="Black" Click="ButtonDragRight"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Доступные cтраны поставщиков"/>

                    <Border BorderBrush="Black"
                        BorderThickness="1.5"
                        Margin="5 10">
                        <ListBox ItemsSource="{Binding SupplierCountrys}"
                             Padding="5 10"
                             x:Name="RightListBoxCountry">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{Binding Brush}"
                                        BorderThickness="2"
                                        Padding="3">
                                        <TextBlock Text="{Binding Title}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </StackPanel>
            </StackPanel>

            <Button Content="Сохранить"
                    Grid.Column="1"
                    Grid.Row="3"
                    HorizontalAlignment="Right"
                    Padding="5 0 5 0"
                    Margin="0 5 20 5" Click="SaveChagesInProduct"/>
        </Grid>
    </Border>
</Window>
