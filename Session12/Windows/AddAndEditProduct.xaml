<Window x:Class="Session12.Pages.AddAndEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAndEditProductPage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black"
                BorderThickness="0 0 2 2">
            <StackPanel>
                <Image 
                    VerticalAlignment="Top"
                    Margin="10"
                    Width="200"
                    Height="200">
                    <Image.Source>
                        <Binding Path="ProductEditing.Photo">
                            <Binding.TargetNullValue>
                                <BitmapImage
                                    UriSource="/Recourse/NetPhotoProduct.jpg"/>
                            </Binding.TargetNullValue>
                        </Binding>
                    </Image.Source>
                </Image>

                <Button
                    Content="Изменить картинку"
                    Width="200"/>
            </StackPanel>
        </Border>

        <StackPanel Style="{StaticResource ResourceKey=StyleStackPanel}"
                    Grid.Column="1">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 20">
                <TextBlock Text="Дата"/>
                <TextBox Text="{Binding ProductEditing.AdditionDateTime}"
                     Style="{StaticResource ResourceKey=StyleTextBox}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 20">
                <TextBlock Text="Название"/>
                <TextBox Text="{Binding ProductEditing.Title}"
                     Style="{StaticResource ResourceKey=StyleTextBox}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 20">
                <TextBlock Text="Описание"/>
                <TextBox Text="{Binding ProductEditing.Description}"
                     Style="{StaticResource ResourceKey=StyleTextBox}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 20">
                <TextBlock Text="Стоимость"/>
                <TextBox Text="{Binding ProductEditing.Cost}"
                     Style="{StaticResource ResourceKey=StyleTextBox}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 20">
                <TextBlock Text="Количество"/>
                <TextBox Text="{Binding ProductEditing.Quantity}"
                         Style="{StaticResource ResourceKey=StyleTextBox}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
